<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="10dp"
    tools:context=".Passenger_Travel_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ground"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
       android:paddingTop="40dp"
        >

    <TextView android:gravity="top|clip_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="35sp"
        android:textColor="@color/backgroundNew"
        android:text="@string/passenger_info"
        android:shadowRadius="15"
        android:shadowDy="2"
        android:shadowDx="2"
        android:shadowColor="@android:color/darker_gray"
        android:fontFamily="serif" android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="10dp"/>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ground"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp">

        <EditText
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/backgroundNew"
            android:padding="5dp"
            android:inputType="text"
            android:hint="From"
            android:layout_weight="1"
            android:id="@+id/passenger_go_from"/>

        <EditText
            android:id="@+id/passenger_go_to"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/backgroundNew"
            android:padding="5dp"
            android:inputType="text"
            android:hint="To"
            android:layout_weight="1"/>

    </LinearLayout>

    <EditText
        android:id="@+id/passenger_date"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ground"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@color/backgroundNew"
        android:padding="10dp"
        android:inputType="date"
        android:hint="Date"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_date_range_black_24dp"/>

    <EditText
        android:id="@+id/passenger_time"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ground"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@color/backgroundNew"
        android:padding="10dp"
        android:inputType="time"
        android:hint="Time"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_access_time_black_24dp"/>


    <EditText
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ground"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@color/backgroundNew"
        android:padding="10dp"
        android:inputType="number"
        android:hint="Number of passengers "
        android:id="@+id/number_of_passengers_passenger"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_person_black_24dp"/>

    <EditText android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ground"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@color/backgroundNew"
        android:padding="10dp"
        android:inputType="number"
        android:hint="Number of bags "
        android:id="@+id/number_of_bags_passenger_passenger"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_business_center_black_24dp"/>

    <EditText android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ground"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@color/backgroundNew"
        android:padding="10dp"
        android:inputType="text"
        android:hint="@string/somking_or_not"
        android:id="@+id/passenger_smoking"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_smoking_rooms_black_24dp"/>

    <Button android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="Confirm"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@color/backgroundNew"
        android:padding="10dp"
        android:inputType="text"
        android:id="@+id/passenger_confirmation"
        android:textAllCaps="false"/>
    </LinearLayout>

</ScrollView>